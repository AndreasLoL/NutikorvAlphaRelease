<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SELVER"
        android:textColor="#FFFF"
        android:background="#c0392b"
        android:id="@+id/gridShop"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/gridImage"
        android:background="#FFFF"
        android:layout_below="@+id/gridShop"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gridShop" />

    <TextView
        android:layout_width="wrap_content"
        android:background="#FFFF"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Piimatoode"
        android:id="@+id/gridName"
        android:layout_below="@id/gridImage"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gridImage"
        android:lines="2"
        android:maxLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$35.99"
        android:id="@+id/gridPrice"
        android:background="#ecf0f1"
        android:layout_below="@id/gridName"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gridName"
        android:gravity="center" />

</RelativeLayout>